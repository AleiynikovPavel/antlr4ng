{
    "name": "antlr4ng",
    "version": "1.1.1",
    "type": "module",
    "description": "Alternative JavaScript/TypeScript runtime for ANTLR4",
    "main": "dist/antlr4.mjs",
    "types": "src/antlr4/index.d.ts",
    "repository": "https://github.com/mike-lischke/antlr4ng",
    "keywords": [
        "lexer",
        "parser",
        "antlr",
        "antlr4",
        "grammar"
    ],
    "license": "BSD-3-Clause",
    "bugs": {
        "url": "https://github.com/mike-lischke/antlr4ng/issues"
    },
    "homepage": "https://github.com/mike-lischke/antlr4ng",
    "peerDependencies": {
        "antlr4ng-cli": "1.0.1"
    },
    "devDependencies": {
        "@babel/core": "7.22.15",
        "@babel/eslint-parser": "7.22.15",
        "@babel/preset-env": "7.22.15",
        "@types/node": "20.5.9",
        "@typescript-eslint/eslint-plugin": "6.6.0",
        "@typescript-eslint/parser": "6.6.0",
        "babel-loader": "9.1.3",
        "c8": "8.0.1",
        "compression-webpack-plugin": "10.0.0",
        "eslint": "8.48.0",
        "eslint-plugin-import": "2.28.1",
        "eslint-plugin-jsdoc": "46.5.1",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-webpack-plugin": "4.0.1",
        "glob-parent": "6.0.2",
        "jasmine": "5.1.0",
        "jasmine-spec-reporter": "7.0.0",
        "minimist": "1.2.8",
        "source-map-support": "0.5.21",
        "terser-webpack-plugin": "5.3.9",
        "ts-node": "10.9.1",
        "typescript": "5.2.2",
        "webpack": "5.88.2",
        "webpack-cli": "5.1.4"
    },
    "scripts": {
        "prepublishOnly": "npm run build && npm run test",
        "build": "webpack && npm run generate-test-parser",
        "test": "jasmine && npm run run-benchmarks",
        "coverage": "c8 jasmine",
        "lint": "eslint src/antlr4/",
        "generate-test-parser": "cli/index.js -Dlanguage=TypeScript -o spec/benchmarks/generated -visitor -listener -Xexact-output-dir spec/benchmarks/MySQLLexer.g4 spec/benchmarks/MySQLParser.g4",
        "run-benchmarks": "node --no-warnings=ExperimentalWarning --loader ts-node/esm spec/benchmarks/run-benchmarks.ts"
    },
    "engines": {
        "node": ">=16"
    },
    "exports": {
        "types": "./src/antlr4/index.d.ts",
        "default": "./dist/antlr4.mjs"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ],
        "targets": "defaults"
    }
}
