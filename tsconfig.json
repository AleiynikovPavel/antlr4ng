{
    "compilerOptions": {
        "target": "ES6",
        "module": "Node16",
        "moduleResolution": "Node16",
        "sourceMap": true,
        "esModuleInterop": true,
        "noEmit": true,
        "lib": [
            "ES2020"
        ],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true,
    "ts-node": {
        "esm": true
    },
}
